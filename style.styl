body
  margin-left 280px
  -webkit-transition margin-left .5s

#outliner-sidebar
  position fixed
  left 0
  top 0
  bottom 0
  background-image url('chrome-extension://__MSG_@@extension_id__/ui/low_contrast_linen.png')
  background-repeat repeat
  overflow hidden
  -webkit-transition left 1s .5s
  &.hidden
    left -280px !important

  &:after
    content ''
    display block
    position absolute
    right -24px
    width 24px
    top -12px
    bottom -12px
    background-color transparent
    box-shadow 0 0 12px rgba(#000, .9)

  // customize scroll bar!

  #outliner-sidebar-header
    position absolute
    left 0
    top 0
    bottom 0
    padding 0 5px
    width 32px
    background-color rgba(#000,.5)
    box-shadow 0 0 12px rgba(#000, .9)
    #outliner-sidebar-title
      font-size 26px
      color #000
      text-shadow -1px 0 rgba(#fff, .15)
      -webkit-transform rotate(-90deg) translateX(-72px)


  #outliner-sidebar-content-wrapper
    margin-left 42px
    background-color transparent
    overflow auto
    height 100%
    #outliner-sidebar-content
      width 218px
      color #ccc
      text-shadow 0 1px 2px black
      padding 10px
      ol
        padding 0 0 0 15px
        margin 0
        li
          margin 10px 0 0
          padding 0
          list-style none
          &.h1
            font-size 20px
          &.h2
            font-size 16px
          &.h3
            font-size 13px
          &.h4
            font-size 12px
          &.h5,
          &.h6
            display none
          a
            color inherit
            text-decoration none
            -webkit-transition color 1s
            color #ccc
            &:hover
              color #fff
              -webkit-transition color .25s
      & > ol
        padding-left 0 !important
        & > li
          margin-top 0 !important

  ::-webkit-scrollbar
    width 6px
    height 6px

  ::-webkit-scrollbar-thumb
    background-color rgba(0, 0, 0, .2)
    border-radius 3px
    // box-shadow inset 0 0 6px rgba(0, 0, 0, .5)
    // border-radius 10px

  ::-webkit-scrollbar-thumb:hover
    background-color rgba(0, 0, 0, .15)

  ::-webkit-scrollbar-thumb:active
    background-color rgba(0, 0, 0, .25)

  ::-webkit-scrollbar-button
    display none

  ::-webkit-scrollbar-track
    background-color #FFF
    // -webkit-box-shadow inset 0 0 6px rgba(0, 0, 0, .3)
    // border-radius 10px
    border-top: 1px dashed rgba(0, 0, 0, .25)
    border-left: 1px dashed rgba(0, 0, 0, .25)

  ::-webkit-scrollbar-track:hover
    background-color #f0f0f0  // This must be present, or it may be overriden

  ::-webkit-scrollbar-corner
    // background-color transparent
